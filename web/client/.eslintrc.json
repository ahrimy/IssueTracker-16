{
    "plugins": [
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "react-app",
        "react-app/jest"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "ignorePatterns": [
        "node_modules/"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-var": "error",
        "no-unused-vars": "warn",
        "no-console": "warn"
    }
}